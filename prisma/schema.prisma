generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PET_AGE {
  BABY
  YOUNG
  ADULT
  SENIOR
}

enum PET_SIZE {
  SMALL
  MEDIUM
  BIG
}

enum PET_INDEPENDENCE {
  LOW
  MEDIUM
  HIGH
}

model Pet {
  id String @id @default(uuid())

  name                String
  description         String
  age                 PET_AGE
  size                PET_SIZE
  levelOfEnergy       Int
  levelOfIndependence PET_INDEPENDENCE
  environment         PET_SIZE

  created_at DateTime @default(now())

  @@map("pets")
}
